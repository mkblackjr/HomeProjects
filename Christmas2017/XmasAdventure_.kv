<BeginButton>:
	
	on_release: self.begin

<InitialScreen>:
	WindowBackground:
		Label:
		BoxLayout:
			orientation: "vertical"
			Label:
				size_hint: 1,0.1
				font_size: 20
				text: "Ho Ho Hope you're ready for some presents!"
			AnchorLayout:
				anchor_x: "center"
				AsyncImage:
					source: "https://cdn.shopify.com/s/files/1/0533/2089/files/Christmas-gifts-for-web-designers-hero.jpg?1665954907344448052"
					size_hint: 0.9,0.9
			Label:
				size_hint: 1,0.05
				font_size: 12
				text: "(And I don't just mean my presence)"
				
		BoxLayout:
			orientation: "vertical"	
			AnchorLayout:
				anchor_x: "center"
				Button:
					text: "Let's Go!"
					size_hint: 0.3,0.4
					on_release:
		                root.parent.transition = sm.FallOutTransition()
		                root.parent.transition.duration = 0.5
		                root.parent.current = 'Main'
			Label:
			Label:


<MainScreen>:
	name: 'Main'
	WindowBackground:


<GUI>:
	InitialScreen:
		id: initial_screen
	MainScreen:
		id: main_screen
